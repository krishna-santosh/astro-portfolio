---
import { SOCIALS } from "../config";
---

<div class="drawer-side bg-base-200">
  <label for="my-drawer" class="drawer-overlay bg-base-200"></label>
  <div class="menu p-4 overflow-y-auto w-[19rem] bg-base-200 text-base-content">
    <div class="w-fit">
      <a href="/">
        <div
          class="avatar transition ease-in-out w-1/2 hover:scale-[102%] block m-auto mt-3 mb-6"
        >
          <div>
            <img
              class="mask mask-circle"
              src="/profile.png"
              alt="profile image"
            />
          </div>
        </div>
      </a>
    </div>
    <ul>
      <!-- Sidebar content here -->
      <li><a href="/">Home</a></li>
      <li><a rel="prefetch" href="/projects/1">Projects</a></li>
      <li><a rel="prefetch" href="/blog/1">Blog</a></li>
      <li><label for="contact">Contact</label></li>
    </ul>
    <div class="grow"></div>
    <button class="lg:hidden flex my-3 chat chat-start">
      <a href="/rss.xml" target="_blank" class="mx-3 chat-bubble chat-bubble-neutral rounded-3xl" aria-label="RSS Feed">
        <div class="flex flex-row" > 
          <p class="px-2 mt-0.5">RSS Feed</p> 
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            style="fill: currentColor;transform: ;msFilter:;"
            ><path
              d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
            ></path><path
              d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
            ></path><circle cx="6" cy="18" r="2"></circle>
          </svg>
        </div>
      </a>
    </button>

